<div id="header">
	{{#if @blog.logo}}<a id="logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>{{/if}}
	<h1 class="blogtitle">
		<a title="{{@blog.title}}" href='{{@blog.url}}'>
			{{{@blog.title}}}
		</a>
	</h1>
	<p class="blogdescription">
		<a title="{{@blog.title}}" href='{{@blog.url}}'>
			{{@blog.description}}
		</a>
	</p>
	<p class="blogsocial">
		
	</p>
</div>